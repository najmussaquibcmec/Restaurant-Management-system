<body>
<%- include('../includes/manager_navigation.ejs') %>

<main>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Staff Name</th>
            <th scope="col">Address</th>
            <th scope="col">Phoneno</th>
            <th scope="col">Salary</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            <% for(var i=0;i < people.length; i++) { %>
                <tr>
                    <th scope="row"> <%= i+1 %></th>
                    <td> <%= people[i].username %></td>
                    <td> <%= people[i].addr %></td>
                    <td> <%= people[i].phone %></td>
                    <form method="post" action="staff_reqs">
                    <td> <input type="number" name="salary" class="form-control-range" min="1" value="<%= people[i].salary %>" style="width: 30%;"></td>
                    <input type="hidden" name="staff_id" value=<%= people[i].id %>>
                    <td><button type="submit" class="btn btn-outline-success">Accept</button></td>
                    </form>
                  </tr>
            <% } %>
        </tbody>
      </table>
    
    
</main>
