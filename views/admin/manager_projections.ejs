<main>
    <div class="container">
      <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      
      <form action="/manager/projections" method="POST">
      <div class="form-group">
        <label>From Date</label>
        <input type="date" name="from" placeholder="From date" class="form-control" required>
      </div>
      <div class="form-group">
        <label>To Date</label>
        <input type="date" name="to" placeholder="To date" class="form-control" required>
      </div>
      <center>
      <select class="form-select" aria-label="Default select example" name="proj_type">
        <!-- <option selected>Select Mode of projections</option> -->
        <option value="items_proj" selected>Best Selling Items</option>
        <option value="revenue">Revenue</option>
      </select>
      <br><br>
      <select class="form-select" aria-label="Default select example" name="mode">
        <!-- <option selected>Select Division Mode </option> -->
        <option value="day" selected>Daily</option>
        <option value="week">Weekly</option>
        <option value="month">Monthly</option>
        <option value="year">Yearly</option>
      </select>
      <br><br>
      <button class="btn btn-primary" type="submit">Submit</button>
    </center>
      </form>
    </div>
    <div class="col-2"></div>    
    </div>
  </div>
    
    
    
