<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/user.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>

<body>
<%- include('../includes/delivery_navigation.ejs') %>

<main>
    <div class="container">
        <div class="column2">
                <div class="container">
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-8">
                            <h5>Delivery Person ID: #<%= id2 %></h5>
                            <% for(var i=0; i < avialable_orders_prim.length; i += 1) { %> 
            
                            <div class="card"">
                                <ul class="list-group list-group-flush">
                                    <div class="row">
                                        <div class="col">
                                            <li class="list-group-item">Order : <%= avialable_orders_prim[i].order_no %></li>
                                        </div>
                                        <form method="post" action="/delivery/available-orders">
                                            <input type="hidden" name="order_num" value=<%= avialable_orders_prim[i].order_no %>>
                                            <div class="col" style="text-align: right;">
                                                <button type="submit" class="btn btn-inline-success">Accept Order</button>
                                            </div>
                                        </form>
                                    </div>
                                    <li class="list-group-item">Phone Number: <%= avialable_orders_prim[i].phone %></li>
                                    <li class="list-group-item">Delivery Address : <%= avialable_orders_prim[i].addr %></li>
                                    <li class="list-group-item">Customer Name : <%= avialable_orders_prim[i].cust_name %></li>
                                </ul>
                                </div>
                                <br>
                            <% } %>

                            <% for(var i=0; i < Math.min(avialable_orders_secd.length, 5 - avialable_orders_prim.length); i += 1) { %> 
                            <div class="card"">
                                <ul class="list-group list-group-flush">
                                    <div class="row">
                                        <div class="col">
                                            <li class="list-group-item">Order : <%= avialable_orders_secd[i].order_no %></li>
                                        </div>
                                        <form method="post" action="/delivery/available-orders">
                                            <input type="hidden" name="order_num" value=<%= avialable_orders_secd[i].order_no %>>
                                            <div class="col" style="text-align: right;">
                                                <button type="submit" class="btn btn-inline-success">Accept Order</button>
                                            </div>
                                        </form>
                                    </div>
                                    <li class="list-group-item">Phone Number: <%= avialable_orders_secd[i].phone %></li>
                                    <li class="list-group-item">Delivery Address : <%= avialable_orders_secd[i].addr %></li>
                                    <li class="list-group-item">Customer Name : <%= avialable_orders_secd[i].cust_name %></li>
                                    <li class="list-group-item">Time Stamp : <%= avialable_orders_secd[i].time_stamp %></li>
                                    <li class="list-group-item">Other Details: </li>
                                </ul>
                                </div>
                                <br>
                            <% } %>
                        </div>
                        <div class="col-2"></div>
                        
                    </div>
                
            </div>

        </div> 
    </div>
    
    
</main>
<%- include('../includes/end.ejs') %>
